{
  "name": "tombroucke/wp-plugin-php-scoper-example",
  "type": "wordpress-plugin",
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "Otomaties\\PhpScoperExample\\": "app/"
    }
  },
  "authors": [
    {
      "name": "Tom Broucke",
      "email": "tom@tombroucke.be"
    }
  ],
  "extra": {
    "require-scoped": {
      "illuminate/collections": "^12.40",
      "psr/log": "^2"
    }
  },
  "require-dev": {
    "laravel/pint": "^1.26",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "scripts": {
    "build": [
      "@build:php"
    ],
    "test": [
      "vendor/bin/phpstan analyze --memory-limit 512M"
    ],
    "build:php": [
      "./scoper.sh -p PhpScoperExampleVendor"
    ]
  }
}
